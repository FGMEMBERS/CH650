<!--Fuel valve-->
  <animation>
   <type>pick</type>
   <object-name>fuelvalv</object-name>
   <action>
     <name>decrease mags: click</name>
     <button>0</button>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-adjust</command>
       <property>controls/fuel/selected-tank</property>
       <step>1</step>
       <min>-1</min>
       <max>2</max>
       <wrap>true</wrap>
     </binding>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-toggle</command>
       <property>sim/sounds/click</property>
     </binding>
   </action>
   <action>
     <name>decrease mags: scroll</name>
     <button>3</button>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-adjust</command>
       <property>controls/fuel/selected-tank</property>
       <step>1</step>
       <min>-1</min>
       <max>2</max>
       <wrap>true</wrap>
     </binding>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-toggle</command>
       <property>sim/model/click</property>
     </binding>
   </action>
   <action>
     <name>increase mags: scroll</name>
     <button>4</button>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-adjust</command>
       <property>controls/fuel/selected-tank</property>
       <step>-1</step>
       <min>-1</min>
       <max>2</max>
       <wrap>true</wrap>
     </binding>
     <binding>
       <condition>
         <not><property>controls/fuel/selected-tank-lock</property></not>
       </condition>
       <command>property-toggle</command>
       <property>sim/model/click</property>
     </binding>
   </action>
   <hovered>
     <binding>
       <command>set-tooltip</command>
       <tooltip-id>tank-selector</tooltip-id>
       <label>Tank: %s</label>
       <property>controls/fuel/selected-tank</property>
       <mapping>nasal</mapping>
       <script>
         var m = getprop('controls/fuel/selected-tank');
         if (m == 0) return 'LEFT';
         if (m == 1) return 'RIGHT';
         return 'CLOSED';
       </script>
     </binding>
   </hovered>
  </animation>

